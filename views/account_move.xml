<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_eims" model="ir.ui.view">
        <field name="name">account.move.form.eims</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add smart button in header -->
            <xpath expr="//header" position="inside">
                <!--                <button name="action_send_to_eims"-->
                <!--                        type="object"-->
                <!--                        string="Send to EIMS"-->
                <!--                        class="oe_highlight"-->
                <!--                />-->

                <button name="open_eims_logs"
                        type="object"
                        string="EIMS Logs"
                        class="oe_stat_button"
                        icon="fa-list">
                    <field name="eims_registered_invoice_count" widget="statinfo"/>
                </button>
                <button name="action_cancel_eims"
                        string="Cancel EIMS"
                        type="object"
                        class="btn-secondary"
                />
                <button name="open_eims_cancel_log"
                        type="object"
                        string="EIMS Cancel Log"
                        class="oe_stat_button"
                        icon="fa-list">
                    <field name="eims_cancel_log_count" widget="statinfo"/>
                </button>
                <button name="open_eims_receipt_log"
                        type="object"
                        string="EIMS Receipt Log"
                        class="oe_stat_button"
                        icon="fa-list">
                    <field name="eims_receipt_log_count" widget="statinfo"/>
                </button>
                <button name="action_view_sent_eims_invoices"
                        string="Bulk Cancel EIMS"
                        type="object"
                        class="btn-secondary"
                />

                <button
                        name="action_view_expired_eims_invoices"
                        type="object"
                        string="Expired EIMS"
                        class="btn btn-primary"
                />

                <button name="action_send_to_eims"
                        string="Confirm and Send"

                        type="object"
                        class="btn-primary"/>

                <button name="action_view_unregistered_eims_invoices"
                        string="Send Bulk"
                        type="object"
                        class="btn-secondary"/>
                <button name="action_create_eims_receipt"
                        string="Generate Receipt"
                        type="object"
                        class="btn-primary"/>
                <button name="action_send_credit_memo_to_eims"
                        type="object"
                        string="Register Credit Memo"
                        class="btn-primary"/>
                <button name="open_eims_credit_log"
                        type="object"
                        string="EIMS Credit Log"
                        class="oe_stat_button"
                        icon="fa-list">
                    <field name="eims_credit_log_count" widget="statinfo"/>
                </button>

                <button name="action_send_eims_email"
                        string="Send EIMS Email"
                        type="object"
                        class="oe_highlight"/>

                <button name="action_send_cancel_email"
                        type="object"
                        string="Send Cancellation Email"
                        class="btn-secondary"
                        />


            </xpath>

        </field>
    </record>
</odoo>
