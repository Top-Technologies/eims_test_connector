<odoo>

    <!-- Action -->
    <record id="action_eims_notification_log" model="ir.actions.act_window">
        <field name="name">EIMS Notification Logs</field>
        <field name="res_model">eims.notification.log</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- Menu under Accounting -->
    <menuitem id="menu_eims_notification_root"
              name="EIMS Notification Logs"
              parent="account.menu_finance_receivables"
              sequence="90"/>

    <menuitem id="menu_eims_notification"
              name="Notification Logs"
              parent="menu_eims_notification_root"
              action="action_eims_notification_log"
              sequence="10"/>


    <!-- List View -->
    <record id="view_eims_notification_log_list" model="ir.ui.view">
        <field name="name">eims.notification.log.list</field>
        <field name="model">eims.notification.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="irn"/>
                <field name="invoice_number"/>
                <field name="action"/>
                <field name="media"/>
                <field name="email"/>
                <field name="status"/>
                <field name="received_time"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_eims_notification_log_form" model="ir.ui.view">
        <field name="name">eims.notification.log.form</field>
        <field name="model">eims.notification.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="irn"/>
                        <field name="invoice_number"/>
                        <field name="action"/>
                        <field name="media"/>
                        <field name="email"/>
                        <field name="status"/>
                        <field name="received_time"/>
                    </group>

                    <group string="Payload">
                        <field name="raw_payload" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
