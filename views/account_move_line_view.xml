<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- list View Inherit: Add withholding_eims column -->
    <record id="view_invoice_line_list_eims" model="ir.ui.view">
        <field name="name">account.move.line.list.eims</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_unit']" position="after">
                <field name="withholding_eims"/>
            </xpath>
        </field>
    </record>

    <!-- Form View Inherit: Add withholding_eims inside move line form -->
    <record id="view_invoice_line_form_eims" model="ir.ui.view">
        <field name="name">account.move.line.form.eims</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='price_unit']" position="after">
                <field name="withholding_eims"/>
            </xpath>
        </field>
    </record>
    <odoo>
    <record id="view_account_move_line_form_inherit_excise" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.excise</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Invoice Lines Form -->
           <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='product_id']" position="after">
                <field name="x_excise_rate"/>
                <field name="x_harmonization_code"/>
            </xpath>
        </field>
    </record>
</odoo>

    <record id="view_move_line_inherit_excise" model="ir.ui.view">
        <field name="name">account.move.line.form.excise.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add dropdown after product field -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                <field name="x_excise_rate"/>
                <field name="x_harmonization_code"/>
            </xpath>
        </field>
    </record>


</odoo>
