<odoo>
    <record id="view_invoice_form_inherit_eims" model="ir.ui.view">
        <field name="name">account.move.form.inherit.eims</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <button name="action_invoice_sent" position="before">
                <button name="action_send_to_eims" string="Send to EIMS" type="object"
                        class="oe_highlight"
                        invisible="eims_irn != False or state != 'posted'"
                        help="Registers this validated invoice with the EIMS portal."/>
            </button>

            <field name="invoice_user_id" position="after">
                <field name="eims_irn"/>
                <field name="eims_status"/>

                <field name="eims_response" widget="text" groups="eims_test_connector.group_eims_manager"/>
            </field>
        </field>
    </record>
</odoo>